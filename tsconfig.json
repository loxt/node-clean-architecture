{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "target": "ES2022",
    "sourceMap": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "strict": true,

    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    }
  },
  "include": ["src", "tests"],
}